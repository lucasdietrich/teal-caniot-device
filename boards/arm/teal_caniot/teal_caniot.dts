 /dts-v1/;
 #include <st/l4/stm32l462Xe.dtsi>
 #include <st/l4/stm32l462retx-pinctrl.dtsi>
 #include <zephyr/dt-bindings/input/input-event-codes.h>


/ {
	model = "Teal CANIoT device board";
	compatible = "custom,teal_caniot";

	chosen {
		zephyr,sram = &sram0;
		zephyr,canbus = &can1;
		zephyr,flash = &flash0;
		// zephyr,console = &lpuart1;
		// zephyr,shell-uart = &lpuart1;
		zephyr,console = &usb_cdc_acm_uart;
		zephyr,shell-uart = &usb_cdc_acm_uart;
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User";
			gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>;
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	leds: leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpioa 0 GPIO_ACTIVE_LOW>;
			label = "User LD0";
		};
		green_led: led_1 {
			gpios = <&gpioa 1 GPIO_ACTIVE_LOW>;
			label = "User LD1";
		};
		blue_led: led_2 {
			gpios = <&gpioa 2 GPIO_ACTIVE_LOW>;
			label = "User LD2";
		};
	};

	aliases {
		sw0 = &user_button;
		led0 = &red_led;
		led1 = &green_led;
		led2 = &blue_led;
	};
};

/* clocks */
&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <20>;
	div-r = <2>;
	div-q = <2>;
	div-p = <7>;
	clocks = <&clk_hse>;
	status = "okay";
};

&clk_hse {
	status = "okay";
	clock-frequency = < DT_FREQ_M(8) >;
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(80)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

/* clock for USB */
&clk_hsi48 {
	status = "okay";
};

/* UARTs */

&can1 {
	status = "disabled";
	pinctrl-0 = <&can1_rx_pb8 &can1_tx_pb9>;
	pinctrl-names = "default";
	bitrate = < 500000 >;
};

&lpuart1 {
	status = "okay";
	pinctrl-0 = <&lpuart1_tx_pb11 &lpuart1_rx_pb10>;
	pinctrl-names = "default";
	current-speed = < 115200 >;
};

&usart3 {
	status = "disabled";
	pinctrl-0 = <&usart3_tx_pc4 &usart3_rx_pc5>;
	pinctrl-names = "default";
	current-speed = < 115200 >;
};

&uart4 {
	status = "disabled";
	pinctrl-0 = <&uart4_tx_pc10 &uart4_rx_pc11>;
	pinctrl-names = "default";
	current-speed = < 115200 >;
};

/* I2C */
&i2c1 {
	status = "okay";
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	clock-frequency = <I2C_BITRATE_STANDARD>; // I2C_BITRATE_FAST

	/* sensor address is 0x48 as A0A1A2=000 */
	tcn75a@48 {
		compatible = "microchip,tcn75a";
		reg = <0x48>;
		resolution = "9-bit"; // Oneshot mode requires 9 bit resolution
		oneshot-mode;
	};
};

/* SPIs */
&spi1 {
	status = "disabled";
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_sck_pb3 &spi1_mosi_pb5 &spi1_miso_pb4>;
	cs-gpios = < &gpiob 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP) >;
};

&spi2 {
	status = "disabled";
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_sck_pb13 &spi2_mosi_pb15 &spi2_miso_pb14>;
	cs-gpios = < &gpiob 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP) >;
};

/* ADC */
&adc1 {
	status = "disabled";
	pinctrl-0 = <
		&adc1_in1_pc0 &adc1_in2_pc1 &adc1_in3_pc2 &adc1_in4_pc3
		&adc1_in9_pa4 &adc1_in10_pa5 &adc1_in11_pa6 &adc1_in12_pa7
		&adc1_in15_pb0 &adc1_in16_pb1
	>;
	pinctrl-names = "default";
	st,adc-clock-source = < ASYNC >;
	st,adc-prescaler = < 1 >; // TODO good value?
};

/* timers */
&timers1 {
	status = "disabled";
};

&timers2 {
	status = "disabled";
};

&timers3 {
	status = "disabled";
};

/* USB */
&usb {
	status = "okay";
	pinctrl-0 = <&usb_dm_pa11 &usb_dp_pa12>;
	pinctrl-names = "default";

	usb_cdc_acm_uart: cdc_acm_uart {
		compatible = "zephyr,cdc-acm-uart";
	};
};